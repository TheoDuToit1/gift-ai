@tailwind base;
@tailwind components;
@tailwind utilities;

@keyframes marquee {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(calc(-100% - var(--gap)));
  }
}

@keyframes marquee-vertical {
  0% {
    transform: translateY(0%);
  }
  100% {
    transform: translateY(-100%);
  }
}

/* Marquee animation utilities */
.animate-marquee {
  animation: marquee var(--duration, 40s) infinite linear;
  will-change: transform;
}

.animate-marquee-vertical {
  animation: marquee-vertical var(--duration, 40s) infinite linear;
  will-change: transform;
}

/* Ensure smooth infinite looping */
.animate-marquee-vertical {
  animation-iteration-count: infinite;
  animation-fill-mode: none;
  animation-timing-function: linear;
}

/* Custom Styles */
html {
  scroll-behavior: smooth;
}

.typewriter-text {
  animation: typewriter 3s steps(40, end) infinite;
}

@keyframes typewriter {
  0%, 20% {
    opacity: 1;
  50% {
    opacity: 0.7;
  }
  80%, 100% {
    opacity: 1;
  }
}
/* Custom scrollbar - UbuntuGift brand orange */
/* WebKit (Chrome, Edge, Safari) */
::-webkit-scrollbar-track {
  background: #f7fafc; /* light track */
}
::-webkit-scrollbar-thumb {
  background: #f97316; /* orange-500 */
  border-radius: 8px;
}

::-webkit-scrollbar-thumb:hover {
  background: #ea580c; /* orange-600 */
}

/* Firefox */
html {
  scrollbar-width: thin;
  scrollbar-color: #f97316 #f7fafc; /* thumb track */
}

/* Dark mode track adjustments */
.dark ::-webkit-scrollbar-track {
  background: #1f2937; /* gray-800 */
}

.dark html {
  scrollbar-color: #f97316 #1f2937; /* thumb track */
}

/* Focus states for accessibility - UbuntuGift dignified colors */
button:focus,
a:focus,
input:focus,
textarea:focus {
  outline: 2px solid #4a5568; /* ubuntugift-secondary */
  outline-offset: 2px;
}

/* Animation classes */
.animate-fade-in {
  animation: fadeIn 0.6s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-slide-up {
  animation: slideUp 0.8s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Hover effects */
.hover-lift {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.hover-lift:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

/* Loading states */
.loading {
  opacity: 0.6;
  pointer-events: none;
}

/* Print styles */
@media print {
  .no-print {
    display: none !important;
  }
}

/* Animated shimmer border utility for sections */
@keyframes shimmer-border-move {
  to {
    background-position: 200% center;
  }
}

/* Usage: add `shimmer-border` to a rounded container (e.g., the ToolsTabs wrapper) */
.shimmer-border {
  position: relative;
  /* keep existing rounded corners from the element's classes (e.g., rounded-2xl) */
}

.shimmer-border::before {
  content: "";
  position: absolute;
  inset: -1px; /* sit just outside current border to avoid clipping */
  border-radius: inherit;
  padding: 2px; /* border thickness */
  background: linear-gradient(
    90deg,
    rgba(74,85,104,0) 20%, /* ubuntugift-secondary with opacity */
    rgba(74,85,104,0) 40%,
    #4a5568 50%, /* ubuntugift-secondary */
    #2d3748 55%, /* ubuntugift-primary */
    rgba(74,85,104,0) 70%,
    rgba(74,85,104,0) 100%
  );
  background-size: 200% auto;
  /* Mask the center to leave only the ring visible */
  -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
  mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  pointer-events: none;
  z-index: 10; /* sit above the element's background but below content */
  animation: shimmer-border-move 3s linear infinite;
  animation-direction: reverse; /* run clockwise */
}

@media (prefers-reduced-motion: reduce) {
  .shimmer-border::before {
    animation: none;
  }
}

/* One-time heading text shine */
@keyframes shine-once {
  0% { background-position: -200% center; }
  100% { background-position: 200% center; }
}

.shine-once {
  background: linear-gradient(90deg, rgba(74,85,104,0) 0%, rgba(74,85,104,0.35) 25%, rgba(74,85,104,0) 50%);
  background-size: 200% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent; /* reveal via clip */
  animation: shine-once 1s ease forwards;
}

@media (prefers-reduced-motion: reduce) {
  .shine-once { animation: none; color: inherit; }
}

/* Small pulsing status dot */
.pulse-dot {
  position: relative;
}
.pulse-dot::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 9999px;
  background: currentColor;
  opacity: 0.5;
  animation: pulse-dot 1.5s cubic-bezier(0.4,0,0.6,1) infinite;
}
@keyframes pulse-dot {
  0%, 100% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.8); opacity: 0; }
}

/* Simple tooltip badge */
.tooltip {
  position: absolute;
  top: 100%;
  transform: translateY(6px);
  left: 0;
  padding: 2px 6px;
  font-size: 10px;
  border-radius: 4px;
  background: #2d3748; /* ubuntugift-primary */
  color: #f7fafc; /* ubuntugift-light */
  white-space: nowrap;
  pointer-events: none;
}

/* Flash twice (subtle glow) */
@keyframes banner-flash {
  0%, 100% {
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.2), 0 0 0 0 rgba(45,55,72,0); /* ubuntugift-primary */
  }
  50% {
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.2), 0 0 0 8px rgba(45,55,72,0.25); /* ubuntugift-primary */
  }
}

.flash-twice {
  animation: banner-flash 0.35s ease-in-out 2;
}

@media (prefers-reduced-motion: reduce) {
  .flash-twice { animation: none; }
}

/* CEO letters sequential vertical (Y-axis) spin */
@keyframes ceo-seq-spin-y {
  0%, 10% {
    transform: rotateY(0deg);
  }
  40% {
    transform: rotateY(-360deg);
  }
  100% {
    transform: rotateY(-360deg);
  }
}

.ceo-3d {
  perspective: 800px;
  display: inline-block;
}

.ceo-spin {
  display: inline-block;
  transform-origin: 50% 50%;
  backface-visibility: hidden;
  transform-style: preserve-3d;
  animation: ceo-seq-spin-y 3s ease-in-out 1 both;
}

.ceo-spin--c { animation-delay: 0s; }
.ceo-spin--e { animation-delay: 1s; }
.ceo-spin--o { animation-delay: 2s; }

/* remove hover spin for clean sequence */

@media (prefers-reduced-motion: reduce) {
  .ceo-spin { animation: none; }
}
/* From Uiverse.io by gharsh11032000 */
.tooltip-container {
  --background: #333333;
  --color: #e8e8e8;
  position: relative;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  font-size: 18px;
  font-weight: 600;
  color: var(--color);
  padding: 0.7em 1.8em;
  border-radius: 8px;
  text-transform: uppercase;
  height: 60px;
  width: 180px;
  display: grid;
  place-items: center;
  border: 2px solid var(--color);
}

.text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: grid;
  place-items: center;
  transform-origin: -100%;
  transform: scale(1);
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
}

.tooltip-container span:last-child {
  position: absolute;
  top: 0%;
  left: 100%;
  width: 100%;
  height: 100%;
  border-radius: 8px;
  opacity: 1;
  background-color: var(--background);
  z-index: -1;
  border: 2px solid var(--background);
  transform: scale(0);
  transform-origin: 0;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  display: grid;
  place-items: center;
}

.tooltip {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  padding: 0.3em 0.6em;
  opacity: 0;
  pointer-events: none;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  background: var(--background);
  z-index: -1;
  border-radius: 8px;
  scale: 0;
  transform-origin: 0 0;
  text-transform: capitalize;
  font-weight: 400;
  font-size: 16px;
  box-shadow: rgba(0, 0, 0, 0.25) 0 8px 15px;
}

.tooltip::before {
  position: absolute;
  content: "";
  height: 0.6em;
  width: 0.6em;
  bottom: -0.2em;
  left: 50%;
  transform: translate(-50%) rotate(45deg);
  background: var(--background);
}

.tooltip-container:hover .tooltip {
  top: -100%;
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
  scale: 1;
  animation: shake 0.5s ease-in-out both;
}

.tooltip-container:hover {
  box-shadow: rgba(0, 0, 0, 0.25) 0 8px 15px;
  color: white;
  border-color: transparent;
}

.tooltip-container:hover span:last-child {
  transform: scale(1);
  left: 0;
}

.tooltip-container:hover .text {
  opacity: 0;
  top: 0%;
  left: 100%;
  transform: scale(0);
}

@keyframes shake {
  0% { rotate: 0; }
  25% { rotate: 7deg; }
  50% { rotate: -7deg; }
  75% { rotate: 1deg; }
  100% { rotate: 0; }
}
